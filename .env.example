# Copy this file to .env and fill in your credentials and settings.

# --- SharpSpring API --- REQUIRED
# Generate these from your SharpSpring settings (Settings -> SharpSpring API -> API Settings)
SHARPSPRING_ACCOUNT_ID=
SHARPSPRING_SECRET_KEY=

# --- Supabase --- REQUIRED
# Find these in your Supabase project settings (Project Settings -> API)
SUPABASE_URL=
SUPABASE_ANON_KEY=
# For server-side operations, use the Service Role Key (Project Settings -> API -> Project API keys -> service_role secret)
# Keep this SECURE! Do not expose it client-side.
SUPABASE_SERVICE_ROLE_KEY=

# --- Slack --- REQUIRED
# Create an Incoming Webhook for your Slack workspace (https://api.slack.com/messaging/webhooks)
SLACK_WEBHOOK_URL=

# --- OpenAI --- REQUIRED
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=
# Optional: Specify the model to use for summarization
# OPENAI_MODEL=gpt-3.5-turbo

# --- Application Settings --- OPTIONAL
# The lead score threshold to trigger a Slack alert (default: 85)
LEAD_SCORE_THRESHOLD=85

# Port for the webhook server (default: 3000)
PORT=3000

# Cron schedule for the daily sync job (default: once a day at 2 AM)
# Format: <minute> <hour> <day_of_month> <month> <day_of_week>
# Example: '0 2 * * *' means 2:00 AM every day
SYNC_CRON_SCHEDULE='0 2 * * *'

# Optional: Set log level (e.g., DEBUG, INFO, WARN, ERROR)
# LOG_LEVEL=INFO 